<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/w_icon_start"
                android:layout_height="@dimen/w_icon_start"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/ic_heart_vibration" />

            <TextView
                android:id="@+id/txtState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/stop_massa"
                android:textColor="@color/colorWhile"
                android:textSize="35sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="@dimen/w_btn_size"
                android:layout_height="@dimen/w_btn_size"
                android:layout_margin="5dp"
                android:background="@drawable/selecter_app"
                android:onClick="onClick"
                android:tag="1"
                android:text="1" />

            <Button
                android:id="@+id/button6"
                android:layout_width="@dimen/w_btn_size"
                android:layout_height="@dimen/w_btn_size"
                android:layout_margin="5dp"
                android:background="@drawable/selecter_app"
                android:onClick="onClick"
                android:tag="2"
                android:text="2" />

            <Button
                android:id="@+id/button"
                android:layout_width="@dimen/w_btn_size"
                android:layout_height="@dimen/w_btn_size"
                android:layout_margin="5dp"
                android:background="@drawable/selecter_app"
                android:onClick="onClick"
                android:tag="3"
                android:text="3" />

            <Button
                android:id="@+id/button4"
                android:layout_width="@dimen/w_btn_size"
                android:layout_height="@dimen/w_btn_size"
                android:layout_margin="5dp"
                android:background="@drawable/selecter_app"
                android:onClick="onClick"
                android:tag="4"
                android:text="4" />

            <Button
                android:id="@+id/button5"
                android:layout_width="@dimen/w_btn_size"
                android:layout_height="@dimen/w_btn_size"
                android:layout_margin="5dp"
                android:background="@drawable/selecter_app"
                android:onClick="onClick"
                android:tag="5"
                android:text="5" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
